[user]
	name = Hessel Tuinhof
	email = pi+git.no.reply@hessel.im
[push]
	default = simple
[pull]
	rebase = true
[alias]
	log-simple = log --pretty=format:\"%C(yellow)%h %C(cyan)%<(12,trunc)%an %C(green)%>(11,trunc)%ar%C(auto)%d %Creset%s\"
	log-graph = log --graph --pretty=format:\"%C(yellow)%h %C(cyan)%an%C(auto)%d %Creset%s\" --all
[core]
	excludesfile = ~/.config/git/ignore
